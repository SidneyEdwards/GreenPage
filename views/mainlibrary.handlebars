<style>
.body{
  background: url("./images/foliage3.33.jpg");
}
.column{
  display: flex;
  justify-content: center;
  max-height: 8%;
width:100%
}
.btn{
background-color: rgb(19, 98, 19);
}

.row{
padding:5%;
}

</style>

<body class="body">
    <h2>Available Books In Our Neighborhood:</h2>
    <section class="card mb-3" style="max-width: 540px;">
    <ul>
      <div class="row g-0">
      {{#each books}}
        <div class="column"> 
            <div id="book-{{id}}" class="card" style="width: 18rem;">
                {{#if image}}
                    <img src="{{image}}" class="img-fluid rounded-start" alt="book image">
    
                {{/if}}
                </div>
                <div class="col-lg-8">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">Author: {{authors}}</p>
                    <p class="card-text">Genre: {{genre}}</p>
                    <p class="card-text">{{description}}</p>
                    <button class="btn btn-primary add-to-library" data-book-id="{{id}}">Add to Library</button>
                </div>
            </div>
            </div>
        </div>
    {{/each}}
</div>

</ul>

</section>
</body>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/js/addToLibrary.js"></script>
  <script src="/js/searchBooks.js"></script>



</html>